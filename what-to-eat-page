	<script>
	var menu = ["包子","饺子","云吞","汉堡","pizza"];

	var myString= "";
	for(i=0;i<menu.length;i++)
	{
		myString+=menu[i]+"，";
	}
	$('#myMenu').val(myString);

	function addMe(){
		menu=$('#myMenu').val().split("，");
		var newMenu=[];
for(i=0;i<menu.length;i++)
{
	if (menu[i]!=''){newMenu.push(menu[i]);}
}
menu=newMenu;
		alert(menu);
        start();
	}


	var timer;
	function start(){
		clearInterval(timer);
		timer = setInterval('change()', 80);
	}
	function ok(){
		clearInterval(timer);
	}

	function change(){
		//document.getElementById('oknum').value 
		$('#shuffleArea').html(menu[ parseInt(Math.random()* menu.length)]);
	}

	//document.onkeydown = mytest;

	function mytest(){
		if(event.keyCode == 32){
	//		start();
			//alert("space");
			window.event.keyCode = 0;
			return false;
		}
		if(event.keyCode == 13){
	//		ok();
			//alert("enter");
			window.event.keyCode = 0;
			return false;
		}
	}

	</script>
